{
  "name": "socialdesk",
  "version": "1.0.0",
  "description": "",
  "main": "main.js",
  "scripts": {
    "app": "concurrently \"npm run vite\" \"npm run electron\" \"npm run server\" -k",
    "electron": "wait-on tcp:5173 && electron .",
    "electron:build": "electron-builder",
    "vite": "cd frontend && npm run dev",
    "vite:build": "cd frontend & npm run build",
    "server": "cd backend && npm run server"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/allanpdev/socialdesk.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/allanpdev/socialdesk/issues"
  },
  "homepage": "https://github.com/allanpdev/socialdesk#readme",
  "devDependencies": {
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.socialdesk",
    "productName": "SocialDesk",
    "files": [
      "main.js",
      "preload.js",
      "icon.png",
      "package.json",
      "frontend/dist/**/*"
    ],
    "directories": {
      "output": "app"
    },
    "win": {
      "target": "nsis",
      "icon": "icon.png"
    }

  }
}
